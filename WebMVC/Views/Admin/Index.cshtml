@{
    ViewBag.Title = "All Message";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Message>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var message in Model)
    {
        <tr>
            <td class="text-right">@message.Id</td>
            <td>@message.Name</td>
            <td class="text-right">@message.Body</td>
            <td class="text-center">
                <form asp-action="DeleteMessage" method="post">
                    <a asp-action="EditMessage" class="btn btn-sm btn-warning"
                       asp-route-messageId="@message.Id">
                        Edit
                    </a>
                    <input type="hidden" name="MessageId" value="@message.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateMessage" class="btn btn-primary">Add Message</a>
</div>

