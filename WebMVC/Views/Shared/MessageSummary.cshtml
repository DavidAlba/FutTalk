@model Message
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Id</small>
            </span>
        </h4>
    </div>
    <form id="@Model.Id" asp-action="AddMessageToCapsule" asp-controller="Capsule" method="post">
        <input type="hidden" asp-for="Id" name="messageId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Body
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Capsule
            </button>
        </span>
    </form>
</div>